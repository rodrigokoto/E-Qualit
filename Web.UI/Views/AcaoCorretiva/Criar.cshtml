                                                <td>
                                                    @if (ViewBag.StatusEtapa == 3 || ViewBag.StatusEtapa == 2)
                                                    {
                                                        <button type="button" class="btn btn-historico">
                                                            <i class="fa fa-history" aria-hidden="true"></i>
                                                        </button>
                                                    }
                                                    @if (ViewBag.StatusEtapa == 2)
                                                    {
                                                        <input type="hidden" name="formAcaoImadiataTbAprovado" value="@aprovadoAux" />
                                                    }
                                                </td>
                                                <td>
                                                    @*id="botoesTd"*@
