<html>
<head>
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/bootstrap")

    <style type="text/css">
        .caixa {
            font-family: 'Abel-Regular', sans-serif !important;
