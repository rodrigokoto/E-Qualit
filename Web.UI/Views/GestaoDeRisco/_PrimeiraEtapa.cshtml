@Html.AntiForgeryToken()
@section scripts {
    <script src="@Url.Content("~/Content/assets/js/FornecedoresController.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/ClienteController.js")"></script>
}
<script>
    $(function () {
        $(".datepicker").datepicker();
    });
</script>
<div class="barra-busca">
    <input type="hidden" name="StatusEtapa" value="1" />
    <input type="hidden" name="labelDesejaCriarNcDtEmissaoAnteriorAUltima" value="@Traducao.Resource.NaoConformidade_primeiraEtapa_msg_DesejaCriarNCComDiaAnteriorAUltimaCadastrada" />
    <form id="form-gestao-de-risco-etapa-1">
        <div class="row">
            <div class="col-sm-offset-5 col-md-2">
                <!-- Input Numero Registro -->
                <div class="form-group">
                    <label for="inputNmRegistro" class="control-label">@Traducao.Resource.NaoConformidade_PrimeiraEtapa_lbl_NuRegistro</label>
                    <input type="text" name="NuRegistro" id="inputNmRegistro" class="form-control numero-NC" disabled />
                    <span class="input-error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <div class="form-group">
                    <label>@Traducao.Resource.GestaoDeRisco_PrimeiraEtapa_lbl_DescricaoRegistro</label>
                    <textarea name="DescricaoRegistro" rows="7" class="form-control form-group"
                              data-msg-required="@Traducao.Resource.NaoConformidade_msg_erro_required_DescricaoRegistro"
                              data-msg-minlength="@Traducao.Resource.NaoConformidade_msg_erro_min_e_max_DescricaoRegistro"></textarea>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label>@Traducao.Resource.GestaoDeRisco_PrimeiraEtapa_lbl_EvidenciaImg</label>
                    <div id="uplPE" class="upload">
                        <div id="dropPE" class="drop" style="padding:35px 12px !important;">
                            <a href="javascript:;" class="text-center">
                                <i class="fa fa-paperclip fa-3x" aria-hidden="true"></i>&nbsp;Anexar
                            </a>
                            <input type="file" name="upl" multiple />
                            <ul></ul>


                            <input type="hidden" id="EvidenciaImg" name="EvidenciaImg" value="@ViewBag.DsArquivos" />
                        </div>
                    </div>
                </div>
            </div>




        </div>


        <div class="row base-senhas">
            <div class="col-md-4">
                <!-- Input Data Emissão -->
                <div class="form-group">
                    <label>@Traducao.Resource.NaoConformidade_PrimeiraEtapa_lbl_DtEmissao</label>
                    <div class="input-group data" id="datetimepicker2">
                        <input type="text" name="DtEmissao" class="form-control input-data datepicker">
                        <span class="input-group-addon">
                            <span class="fa fa-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <!-- Input Processo -->
                <div class="form-group">
                    <label>
                        @Traducao.Resource.NaoConformidade_PrimeiraEtapa_lbl_IdProcesso
                    </label>
                    <select class="form-control" name="IdProcesso" id="drop-processos" data-rule-required="true" data-msg-required="@Traducao.Resource.NaoConformidade_msg_erro_required_IdProcesso">
                        <option value="0">@Traducao.Resource.Dropdown_name_select</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <!-- Input Emissor -->
                <div class="form-group">
                    <label>
                        @Traducao.Resource.GestaoDeRisco_PrimeiraEtapa_lbl_IdEmissor
                    </label>
                    <select class="form-control" @(ViewBag.IdPerfil != 4 ? "lista-emissores" : "") "
                            name="IdEmissor"
                            data-rule-required="true"
                            data-msg-required="@Traducao.Resource.NaoConformidade_msg_erro_required_IdEmissor"
                            @(ViewBag.IdPerfil == 4 ? "disabled" : null)>
                        <option value="">@Traducao.Resource.Dropdown_name_select</option>
                        @if (ViewBag.IdPerfil == 4)
                        {
                            <option value="@ViewBag.UsuarioLogado.IdUsuario" selected>@ViewBag.UsuarioLogado.NmCompleto</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <!-- Combobox Responsável -->
                <div class="form-group">
                    <label>
                        <label>@Traducao.Resource.GestaoDeRisco_PrimeiraEtapa_lbl_IdResponsavelInicarAcaoCorretiva</label>
                    </label>
                    <select class="form-control" name="IdResponsavelInicarAcaoImediata" data-rule-required="true" data-msg-required="@Traducao.Resource.NaoConformidade_msg_erro_required_IdResponsavelIniciarAcaoCorretiva">
                        <option value="0">@Traducao.Resource.Dropdown_name_select</option>
                    </select>
                </div>
            </div>

        </div>
        <input type="hidden" name="IdSite" id="gestao-de-risco-site" value="@ViewBag.IdSite" />
    </form>
</div>
