@{

    //para os anexos das calibracoes
    //a chave do dicionario é o idcalibracao
    var listaBotoesCalibracaoUpload = new Dictionary<int, Web.UI.Models.ArquivoAnexoViewModel>();



    var listaCalibracoes = Model.Calibracao;
    if (listaCalibracoes == null)
    {
        listaCalibracoes = new List<Dominio.Entidade.Calibracao>();
    }

    //tem que ter um para o zero (nova calibracao)

    listaCalibracoes.Add(new Dominio.Entidade.Calibracao() { IdCalibracao = 0, ArquivoCertificado = new List<Dominio.Entidade.ArquivoCertificadoAnexo>() });

    foreach (var calibracao in listaCalibracoes)
    {
        var chaveDestecontroleUploadArquuivos = "upacaoimeidata" + calibracao.IdCalibracao.ToString();

        var controleUploadArquuivos = new Web.UI.Models.ArquivoAnexoViewModel()
        {
            IdentificadorInicial = chaveDestecontroleUploadArquuivos,
            TextoLink = "Certificados",
            ModalTittle = Traducao.Resource.UploadArquivos,
            NumeroArquivos = calibracao.ArquivoCertificado?.Count ?? 0,
            PodeAnexar = true
        };
        controleUploadArquuivos.AnexosLista = calibracao.ArquivoCertificado?.ToList().Select(r =>
        {
            return
        new Web.UI.Models.ArquivoAnexoItemViewModel()
        {
            AnexoDados = r.Anexo,
            IdChave1 = r.IdArquivoCertificadoAnexo,
            IdChave2 = r.IdCalibracao
        };
        }).ToList();

        listaBotoesCalibracaoUpload.Add(calibracao.IdCalibracao, controleUploadArquuivos);

    }
}

@{
    //agora renderizamos todo mundo

    Html.RenderPartial("Anexo/_AnexoSetup");

    foreach (var esteUpload in listaBotoesCalibracaoUpload)
    {
        <span id="uploadbotao@(esteUpload.Key)" style="display:none;">
            @{
                Html.RenderPartial("Anexo/_Anexo", esteUpload.Value);
            }
        </span>
    }

    foreach (var esteUpload in listaBotoesCalibracaoUpload)
    {
        Html.RenderPartial("Anexo/_ModalAnexo", esteUpload.Value);
    }

}


