(int)FuncoesInstrumento.ExcluirCalibracao,
};

    var listaPermissoes = new List<PermissoesApp>();

    listaPermissoes.AddRange(ViewBag.Permissoes);


}
@section Metas {
    <meta name="page" content="CriarInstrumentos" />
}
