<!-- Modal content-->
<div class="modal-body">
    <div class="row">
        <div class="col-xs-12">
            <div class="form-group">
                <label class="control-label">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_tipo_grafico</label>
                <select id="ddlTipoGrafico" class="form-control">
                    <option value="0">Selecione</option>
                    <option value="1">Total de NCs geradas x Mês</option>
                    <option value="2">Total de NCs geradas x NCs abertas x NCs fechadas</option>
                    <option value="3">Total de NCs geradas x Tipo de NC</option>
                    <option value="4">Total de NCs geradas x Total de NC com AC</option>
                    <option value="5">Total de NCs geradas x Departamento</option>
                    <option value="6">Total de NCs geradas x Unidade</option>
                    <option value="7">Comparativo do total de NCs gerado mês a mês x ano a ano</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-6">
            <div class="form-group">
                <label class="control-label">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_Tipo</label>
                <select id="ddlTipoNaoConformidade" class="form-control">
                    <option value="">@Traducao.Resource.Dropdown_name_select</option>
                    @foreach (var item in ViewBag.TiposNaoConformidade.Items)
                    {
                        <option value="@item.IdControladorCategorias">@item.Descricao</option>
                    }

                </select>
            </div>
        </div>
        <div class="col-xs-3">
            <div class="form-group">
                <label class="control-label">De</label>
                <input type='text' maxlength="6" id="dtDe" class="form-control" onblur="dateFormat(this)" onfocus="removeNoNumerics(this)" />
            </div>
        </div>

        <div class="col-xs-3">
            <div class="form-group">
                <label class="control-label">Até</label>
                <input type='text' maxlength="6" id="dtAte" class="form-control" onblur="dateFormat(this)" onfocus="removeNoNumerics(this)" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <input name="tipoGrafico" id="graficoBarra" type="radio"/><i class="fa fa-bar-chart"></i>
            <input name="tipoGrafico" id="graficoPizza" type="radio"/><i class="fa fa-pie-chart"></i>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
    <button type="button" class="btn btn-primary">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_grafico</button>
</div>



