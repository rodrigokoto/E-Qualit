                                                    <div class="row">
                                                        <!-- Numero Acao Corretiva -->
                                                        <div class="col-sm-2">
                                                            <div class="form-group">
                                                                <label for="form-acaoimediata-numero-ac" class="control-label">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_Nm_acao_corretiva</label>
