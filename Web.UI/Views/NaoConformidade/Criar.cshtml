                                           placeholder="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_placeholder_NmRegistro"
                                           value="@Model.NuRegistro" disabled />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <!-- Descricao Registro -->
                            <div class="col-lg-10 col-md-8 col-sm-12 col-xs-12 ">
                                <div class="form-group">
                                    <label for="form-criar-nao-conformidade-ds-registro" class="control-label">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_DsRegistro</label>
                                    <textarea id="form-criar-nao-conformidade-ds-registro" name="formCriarNaoConformidadeDsRegistro" class="form-control"
                                              placeholder="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_placeholder_Descricao_registro"
                                              data-msg-required="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_DsRegistro"
                                              data-msg-minlength="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_minlength_DsRegistro"
                                              value=""
                                              rows="7">@Model.DescricaoRegistro</textarea>
                                </div>
                            </div>
                            <!-- Arquivo de Evidencia -->
                            <div class="col-lg-2 col-md-4 col-sm-3 col-xs-12">
                                <div class="form-group">
                                    <label for="form-cria-cliente-contrato" class="control-label">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_Arquivo_evidencia</label>
                                    <div class="upload-arq form-control @(Model.IdRegistroConformidade > 0 ? "box-upload-arq" : null)">
                                        <a class="btn-upload-multiple-form-criar-nao-conformidade-evidencia">
                                            <i class="fa fa-paperclip fa-1x" aria-hidden="true"></i>@Traducao.Shared.ResourceButtons.btn_lbl_anexar
                                        </a>

                                        <ul class="@(Model.IdRegistroConformidade > 0 ? "dashed" : null)">
                                            @if (listaEvidencias.Count > 0)
                                            {
                                                foreach (var evidencia in listaEvidencias)
                                                {
                                                    <li>
                                                        <a href="@evidencia.ArquivoB64" target="_blank" download="@evidencia.Nome">@evidencia.Nome</a>
                                                        <input type="hidden" name="formCriarNaoConformidadeEvidenciaNome" value="@evidencia.Nome">
                                                        <input type="hidden" name="formCriarNaoConformidadeEvidenciaIdAnexo" value="@evidencia.IdAnexo">
                                                    </li>

                                                }
                                            }

                                        </ul>
                                        <input type="file" name="formCriarNaoConformidadeEvidencia" id="form-criar-nao-conformidade-evidencia"
                                               class=""
                                               data-msg-required=""
                                               data-b64=""
                                               multiple="multiple">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <!-- Data de Emissao -->
                            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 ">
                                <div class="form-group">
                                    <label for="form-criar-nao-conformidade-dt-emissao">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_DtEmissao</label>
                                    <br />
                                    <div class='input-group input-group-datepicker'>
                                        <input type='text' name="formCriarNaoConformidadeDtEmissao" id="form-criar-nao-conformidade-dt-emissao"
                                               class="form-control datepicker data largura-calendario"
                                               placeholder="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_placeholder_DtEmissao"
                                               data-msg-required="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_DtEmissao"
                                               value="@Model.DtEmissao.ToString(@Traducao.Resource.dateFormat)" />
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar" aria-hidden="true"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <!-- Processo -->
                            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 ">
                                <div class="form-group">
                                    <label for="form-criar-nao-conformidade-processo" class="control-label">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_Processo</label>
                                    <select id="form-criar-nao-conformidade-processo" name="formCriarNaoConformidadeProcesso" class="form-control"
                                            data-msg-required="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_Processo">
                                        <option value="">@Traducao.Resource.Dropdown_name_select</option>
                                        @if (Model.IdProcesso != 0 && Model.IdProcesso != null)
                                        {
                                            <option value="@Model.IdProcesso" selected>@Model.Processo.Nome</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <!-- Emissor -->
                            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 ">
                                <div class="form-group">
                                    <label for="form-criar-nao-conformidade-emissor" class="control-label">@Traducao.Resource.NaoConformidade_PrimeiraEtapa_lbl_IdEmissor</label>
                                    @if (ViewBag.IdPerfil != 4)
                                    {

                                        <select id="form-criar-nao-conformidade-emissor" name="formCriarNaoConformidadeEmissor" class="form-control"
                                                data-msg-required="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_Emissor">
                                            <option value="">@Traducao.Resource.Dropdown_name_select</option>
                                            @if (Model.IdEmissor != 0)
                                            {
                                                <option value="@Model.IdEmissor" selected>@Model.Emissor.NmCompleto</option>
                                            }
                                            @*@if (ViewBag.IdPerfil == 4 && Model.IdRegistroConformidade == 0)
                                                {
                                                    <option value="@ViewBag.UsuarioLogado.IdUsuario" selected>@ViewBag.UsuarioLogado.Nome</option>
                                                }*@
                                        </select>
                                    }
                                    else
                                    {
                                        <select id="form-criar-nao-conformidade-emissor" disabled name="formCriarNaoConformidadeEmissor" class="form-control"
                                                data-msg-required="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_Emissor">

                                            <option value="@ViewBag.UsuarioLogado.IdUsuario" selected>@ViewBag.NomeUsuario</option>

                                        </select>


                                    }


                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <!-- E Auditoria -->
                            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12 ">
                                <div class="form-group">
                                    <label>@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_EAuditoria</label>
                                    <div class="">
                                        <label for="form-criar-nao-conformidade-eauditoria-sim">
                                            <input type="radio" id="form-criar-nao-conformidade-eauditoria-sim" name="formCriarNaoConformidadeEAuditoria"
                                                   data-msg-required="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_EAuditoria"
                                                   value="true" @(Model.ENaoConformidadeAuditoria == true ? "checked" : "")>
                                            @Traducao.Shared.ResourceLabel.Label_radio_Sim
                                        </label>
                                        <label for="form-criar-nao-conformidade-eauditoria-nao">
                                            <input type="radio" id="form-criar-nao-conformidade-eauditoria-nao" name="formCriarNaoConformidadeEAuditoria"
                                                   data-msg-required="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_EAuditoria"
                                                   value="false" @(Model.ENaoConformidadeAuditoria == false ? "checked" : "")>
                                            @Traducao.Shared.ResourceLabel.Label_radio_Nao
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <!-- Tipo Nao Conformidade -->
                            <div class="col-lg-4 col-md-3 col-sm-6 col-xs-12 ">
                                <div class="form-group">
                                    <label for="form-criar-nao-conformidade-tipo" class="control-label">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_Tipo</label>
                                    <select id="form-criar-nao-conformidade-tipo" name="formCriarNaoConformidadeTipo" class="form-control"
                                            data-msg-required="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_Tipo">
                                        <option value="">@Traducao.Resource.Dropdown_name_select</option>
                                        @if (Model.IdTipoNaoConformidade != null)
                                        {
                                            <option value="@Model.IdTipoNaoConformidade" selected>@Model.TipoNaoConformidade.Descricao</option>
                                        }
                                    </select>
                                    @if (listaPermissoes.Any(x => x.IdFuncao == (int)FuncoesNaoConformidade.CriarTipoDeNC) || ViewBag.IdPerfil != 4)
                                    {
                                        <button type="button" class="btn btn-primary add-tipo-nao-conformidade" data-tipo="tnc" data-site="@ViewBag.IdSite">@Traducao.Shared.ResourceButtons.btn_lbl_adicionar</button>
                                    }
                                </div>
                            </div>
                            <!-- Responsavel -->
                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                                <div class="form-group">
                                    <label for="form-criar-nao-conformidade-responsavel" class="control-label">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_Responsavel_definir_AC</label>
                                    <select id="form-criar-nao-conformidade-responsavel" name="formCriarNaoConformidadeResponsavel" class="form-control"
                                            data-msg-required="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_Responsavel_definir_AC">
                                        <option value="">@Traducao.Resource.Dropdown_name_select</option>
                                        @if (Model.IdResponsavelInicarAcaoImediata != null)
                                        {
                                            <option value="@Model.IdResponsavelInicarAcaoImediata" selected>@Model.ResponsavelInicarAcaoImediata.NmCompleto</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <!-- Tags -->
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                <div class="form-group">
                                    <label for="form-criar-nao-conformidade-tags" class="control-label">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_Tags</label>
                                    <textarea id="form-criar-nao-conformidade-tags" name="formCriarNaoConformidadeTags" class="form-control"
                                              placeholder="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_placeholder_Tags"
                                              data-msg-required="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_Tags"
                                              value="" rows="5">@Model.Tags</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <!-- Formulario Acao Imediata -->
        <form id="form-acaoimediata">
            <div class="panel panel-default" id="panel-acaoimediata">
                <div class="panel-heading">
                    <div class="panel-title">
                        <h2>@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_Status_Acao_imediata</h2>
                    </div>
                </div>
                <div class="panel-body" id="panel-form-acaoimediata">
                    <div class="barra-busca">
                        <div class="row">
                            <!-- E Procedente -->
                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                                <div class="form-group">
                                    <label>@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_EProcedente</label>
                                    <div class="">
                                        <label for="form-acaoimediata-e-procedente-sim">
                                            <input type="radio" id="form-acaoimediata-e-procedente-sim" name="formAcaoImadiataEProcedente"
                                                   data-msg-required="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_EProcedente"
                                                   value="true"
                                                   @(listaPermissoes.Any(x => x.IdFuncao == 14) && Model.IdRegistroConformidade > 0 || ViewBag.IdPerfil != 4 ? null : "disabled")
                                                   @(Model.EProcedente == true ? "Checked" : null)>
                                            @Traducao.Shared.ResourceLabel.Label_radio_Sim
                                        </label>
                                        <label for="form-acaoimediata-e-procedente-nao">
                                            <input type="radio" id="form-acaoimediata-e-procedente-nao" name="formAcaoImadiataEProcedente"
                                                   data-msg-required="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_EProcedente"
                                                   value="false"
                                                   @(listaPermissoes.Any(x => x.IdFuncao == 14) && Model.IdRegistroConformidade > 0 || ViewBag.IdPerfil != 4 ? null : "disabled")
                                                   @(Model.EProcedente == false ? "Checked" : null)>
                                            @Traducao.Shared.ResourceLabel.Label_radio_Nao
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <!-- Data Descricao Acao -->
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <label for="form-acaoimediata-dt-descricao-acao">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_DtDescricaoAcao</label>
                                    <br />
                                    <div class='input-group date input-group-datepicker'>
                                        <input type='text' name="formAcaoImadiataDtDescricaoAcao" id="form-acaoimediata-dt-descricao-acao" class="form-control data datepicker largura-calendario"
                                               data-msg-required="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_DtDescricao"
                                               value="@(Model.DtDescricaoAcao.HasValue?Model.DtDescricaoAcao.Value.ToString(@Traducao.Resource.dateFormat):"")" />
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar" aria-hidden="true"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <!-- Justificativa -->
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                <div class="form-group">
                                    <label for="form-acaoimediata-justificativa" class="control-label">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_Justificativa</label>
                                    <textarea id="form-acaoimediata-justificativa" name="formAcaoImadiataJustificativa" class="form-control"
                                              placeholder="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_placeholder_Justificativa"
                                              data-msg-required="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_Justificativa"
                                              data-msg-minlength="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_minlength_Justificativa."
                                              data-msg-verifyTableAcaoImediata="TESTE"
                                              value="" rows="7">@Model.DescricaoAcao</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <!-- Painel Acao Imediata -->
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                <table id="tb-acao-imediata" class="display dataTable no-footer dtr-inline table-bordered table" style="" name="formAcaoImadiata">
                                    <thead class="titulo-tabela">
                                        <tr class="bg" role="row">
                                            <th class="w20">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_AI_Acao_descricao</th>
                                            <th class="w7">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_AI_Prazo_implementacao</th>
                                            <th class="w15">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_AI_Responsavel_implementar</th>
                                            <th class="w7">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_AI_Efetiva_implementacao</th>
                                            <th class="w7">@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_AI_Arquivo_evidencia</th>
                                            <th class="w7"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{var count = 0;}
                                        @foreach (var acaoImediata in Model.AcoesImediatas)
                                        {
                                            count++;
                                            <tr role="row" class="odd">
                                                <!-- Descricao -->
                                                <td>

                                                    @{ var formAcaoImadiataTbDescricao = "formAcaoImadiataTbDescricao" + count; }
                                                    <textarea type="text" id="@formAcaoImadiataTbDescricao" name="formAcaoImadiataTbDescricao" class="form-control"
                                                              placeholder="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_placeholder_AI_Descricao"
                                                              data-msg-required="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_AI_Descricao">@acaoImediata.Descricao</textarea>
                                                    <input type="hidden" name="formAcaoImadiataTbIdAcaoImediata" value="@acaoImediata.IdAcaoImediata" />
                                                    <input type="hidden" name="formAcaoImadiataTbEstado" value="16" />
                                                </td>
                                                <!-- Prazo Implementacao -->
                                                <td>
                                                    <div class='input-group input-group-datepicker'>
                                                        @{ var formAcaoImadiataTbDtPrazoImplementacao = "formAcaoImadiataTbDtPrazoImplementacao" + count; }
                                                        <input type='text' name="formAcaoImadiataTbDtPrazoImplementacao" id="@formAcaoImadiataTbDtPrazoImplementacao" class="form-control data datepicker largura-calendario"
                                                               placeholder="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_lbl_placeholder_AI_Prazo_implementacao"
                                                               data-msg-required="@Traducao.NaoConformidade.ResourceNaoConformidade.NC_msg_required_AI_Prazo_implementacao"
