@using ApplicationService.Entidade
@using ApplicationService.Enum
@model Dominio.Entidade.Relatorio

@{
    ViewBag.Title = "Relatorios";

    var listaPermissoes = new List<PermissoesApp>();
    listaPermissoes.AddRange(ViewBag.Permissoes);

}
@section Metas {
    <meta name="page" content="IndexRelatorio" />
}



@section scripts {
    <script src="@Url.Content("~/Content/assets/js/RelatorioController.js?rnd=3")"></script>

}
<div id="main">
    <div class="content-painel">
        @using (Html.BeginForm(Model.Url, "Relatorio", FormMethod.Post))
        {
            <div class="panel panel-default" id="panel-relatorio">
                <div class="panel-body" id="panel-form-relatorio">
                    <div class="barra-busca">
                        <div class="row">
                            <div class="col-lg-12">

                                @Html.HiddenFor(x => x.IdRelatorio)
                                @Html.HiddenFor(x => x.IdFuncionalidade)
                                @Html.HiddenFor(x => x.Nome)
                                @Html.HiddenFor(x => x.Funcionalidade)

                                @foreach (var item in Model.Parametros)
                                {
                                    if (item.Key == "Mês")
                                    {
                                        <div class="form-group row col-lg-6">
                                            <div class="col-lg-3 input-group-datepicker">
                                                @Html.LabelFor(x => x.Parametros[item.Key], item.Key)
                                                @Html.EditorFor(x => x.Parametros[item.Key], new { htmlAttributes = new { maxlenght = 6, @class = "form-control data datepicker month-picker" } })

                                            </div>
                                        </div>
                                    }
                                    if (item.Key == "Ano")
                                    {
                                        <div class="form-group row col-lg-6">
                                            <div class="col-lg-3 input-group-datepicker">
                                                @Html.LabelFor(x => x.Parametros[item.Key], item.Key)
                                                @Html.EditorFor(x => x.Parametros[item.Key], new { htmlAttributes = new { maxlenght = 6, @class = "form-control data datepicker year-picker" } })

                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-primary left">Gerar Relatório</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
