@helper SairMes(string labelMes, string nomeMesMaiusc, string nomeMesMinusc, int numeroMes, Dominio.Entidade.Pai pai, List<PermissoesApp> listaPermissoesMes)
{
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" style="height: 125px">
        <div class="background-calendar">
            @labelMes
        </div>
        <ul ondragover="APP.component.DragAndDrop.allowDrop(event)" ondrop="APP.component.DragAndDrop.drop(event)" data-divarquivos="#modal-rai@(numeroMes)@(pai.Ano)">
            <input type="hidden" class="form-control" id="form-calendario-mes" name="formAuditoriaMes@(nomeMesMaiusc)" value="@numeroMes" />
            @{
                List<string> normas = (pai.Plais.Where(x => x.Mes == numeroMes).FirstOrDefault() != null && pai.Plais.Where(x => x.Mes == numeroMes).FirstOrDefault().PlaiProcessoNorma != null ? pai.Plais.Where(x => x.Mes == numeroMes).FirstOrDefault().PlaiProcessoNorma.Select(x => x.Processo.Nome).ToList().Distinct().ToList() : new List<string>());
            }
            @foreach (var processoNorma in normas)
            {
                if (processoNorma != null)
                {
                    <li id="drag-item-eng" name="formCalendarioMesProcesso" class="pai-calendario-processo" draggable="true" ondragstart="APP.component.DragAndDrop.drag(event)">

                        <span>
                            @processoNorma

                            @if (listaPermissoesMes.Any(x => x.IdFuncao == (int)FuncoesAuditoria.ElaborarPAIExcluir)
|| ViewBag.IdPerfil != 4)
                            {
                                <a href="#" onclick="ExcluirProcessoAuditoria(this);" style="float: right; margin-right: 10px; color: white"><i class="fa fa-trash"></i></a>
                            }
                        </span>
                    </li>
                }
            }
        </ul>
        @if (pai.Plais.Count > 0 && pai.Plais.Where(x => x.Mes == numeroMes) != null && pai.Plais.Where(x => x.Mes == numeroMes).FirstOrDefault().PlaiProcessoNorma != null && pai.Plais.Where(x => x.Mes == numeroMes).FirstOrDefault().PlaiProcessoNorma.Count > 0)
        {
            if (listaPermissoesMes.Any(x => x.IdFuncao == (int)FuncoesAuditoria.ElaborarPLAIEditar)
                           || ViewBag.IdPerfil != 4)
            {
                <div class="button-plai">
                    <button type="button" class="btn btn-primary">@Html.ActionLink(Traducao.Shared.ResourceButtons.btn_lbl_plai, "Criar", "Plai", new { idPai = pai.IdPai, mes = numeroMes }, null)</button>
                </div>
            }

            <div class="button-pai-anexo">
                @{
                    var plai = pai.Plais.Where(x => x.Mes == numeroMes).FirstOrDefault();
                    int nroArquivos = plai.ArquivoPlai.Count;
                }
                <button type="button" class="btn btn-primary" onclick="$('#modal-rai@(numeroMes)@(pai.Ano)').modal('show');">R.A.I. (<span class="raiNroArquivos@(numeroMes)@(pai.Ano)">@nroArquivos</span> arquivos)</button>
            </div>
        }
    </div>
}
@helper SairMesRaiModal(string nomeMes, int numeroMes, Dominio.Entidade.Pai pai, List<PermissoesApp> listaPermissoesMes)
{

    @* dialogo do RAI
        nao pode estar no meio do HTML principal, tem que estar fora do div main
    *@
    <div id="modal-rai@(numeroMes)@(pai.Ano)" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close closeCargos2" data-dismiss="modal">
                        <i class="fa fa-times-circle-o black-color" aria-hidden="true" data-toggle="tooltip" data-placement="right" data-original-title="@Traducao.Resource.Fechar"></i>
                    </button>
                    <h4 class="modal-title">R.A.I. - @nomeMes</h4>
                </div>

                <div class="modal-body rai-modal-body">

                    @{
                        var plai = pai.Plais.Where(x => x.Mes == numeroMes).FirstOrDefault();
                        var listaAnexos = plai.ArquivoPlai;
                    }

                    @* botao upload novo, fica no topo *@
                    @if (listaPermissoesMes.Any(x => x.IdFuncao == (int)FuncoesAuditoria.AnexarPLAI) || ViewBag.IdPerfil != 4)
                    {
                        <div class="upload-arq upload-arq-rai" style="text-align: left">
                            <a class="btn-upload2-rai linksemcor">
                                <i class="fa fa-paperclip fa-1x latalixo" aria-hidden="true"></i> @Traducao.Resource.Anexar
                            </a>
                            <input type="file" class="anexo-plai"
                                   data-spannroarquivos="raiNroArquivos@(numeroMes)@(pai.Ano)"
                                   data-msg-required=""
                                   data-b64="">


                            <div class="templatenovoarquivo" style="display: none">
                                <div class="upload-arq upload-arq-rai uploadrai@(numeroMes)@(pai.Ano)" style="text-align: left">
                                    @if (listaPermissoesMes.Any(x => x.IdFuncao == (int)FuncoesAuditoria.AnexarPLAI) || ViewBag.IdPerfil != 4)
                                    {
                                        <a href="#" class="btn-delete2-rai linksemcor latalixo"
                                           data-spannroarquivos="raiNroArquivos@(numeroMes)@(pai.Ano)"><i class="fa fa-trash fa-1" aria-hidden="true" title="Excluir anexo" data-original-title=""></i></a>
                                    }
                                    <span class="downrai linksemcor">Anexo: <span class="noemarquivo"></span></span>
                                    <input type="hidden" name="IdAnexo" value="0" />
                                    <input type="hidden" name="NomeAnexo" value="" />
                                    <input type="hidden" name="ApagarAnexo" value="0" />
                                    <input type="file" name="ConteudoAnexo" class="anexo-plai" data-msg-required="" data-b64="">
                                </div>

                            </div>
                        </div>

                    }

                    @foreach (var anexo in listaAnexos)
                    {
                        @*
            cada arquivo estara agrupado por classe, para montar os dados precisa ler por classe e depois os itens dentro dessa classe
                        *@
                        <div class="upload-arq upload-arq-rai uploadrai@(numeroMes)@(pai.Ano)" style="text-align: left">
                            @if (listaPermissoesMes.Any(x => x.IdFuncao == (int)FuncoesAuditoria.AnexarPLAI) || ViewBag.IdPerfil != 4)
                            {
                                <a href="#" class="btn-delete2-rai linksemcor latalixo"
                                   data-spannroarquivos="raiNroArquivos@(numeroMes)@(pai.Ano)"><i class="fa fa-trash fa-1" aria-hidden="true" title="Excluir anexo" data-original-title=""></i></a>
                            }
                            @{
                                var ArquivoB64 = String.Format("data:application/" + (anexo.Anexo.Arquivo != null ? anexo.Anexo.Extensao : "") + ";base64," + (anexo.Anexo.Arquivo != null ? Convert.ToBase64String(anexo.Anexo.Arquivo) : ""));
                            }
                            <a href="@ArquivoB64" class="downrai linksemcor" target="_blank" download="@anexo.Anexo.Nome">Anexo: @anexo.Anexo.Nome</a>
                            <input type="hidden" name="IdAnexo" value="@anexo.Anexo.IdAnexo" />
                            <input type="hidden" name="NomeAnexo" value="@anexo.Anexo.Nome" />
                            <input type="hidden" name="ApagarAnexo" value="0" />
                            <input type="hidden" name="IdArquivoPlaiAnexo" value="@anexo.IdArquivoPlaiAnexo" />
                            <input type="hidden" name="IdPlai" value="@anexo.IdPlai" />
                            <input type="file" class="anexo-plai"
                                   data-msg-required=""
                                   data-b64="@(anexo.Anexo.Arquivo != null && anexo.Anexo.IdAnexo > 0 ? Convert.ToBase64String(anexo.Anexo.Arquivo) : "")">
                        </div>
                    }


                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

}



