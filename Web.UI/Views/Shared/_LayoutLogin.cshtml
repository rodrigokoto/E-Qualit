    <input type="hidden" id="hdUrl" value="@Request.CurrentExecutionFilePath.Replace("Index", "Acesso").Replace("index", "Acesso")" />

    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-lg-12">
                <div class="header-login">
                    <div class="pull-right">
                        @foreach (Web.UI.Helpers.Cultura.sIdioma _idioma in Web.UI.Helpers.Cultura.ListaIdiomas())
                        {
                            <a href="@Url.Action("Lingua", "Login", new { lingua = _idioma.Cultura})">
                                <img src="~/Content/assets/imagens/bandeira-@(_idioma.Cultura).png" alt="@_idioma.Nome" title="@_idioma.Nome" />
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
